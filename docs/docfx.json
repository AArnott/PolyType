{
  "$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",
  "metadata": [
    {
      "src": [
        {
          "src": "../src",
          "files": [
            "**/PolyType.csproj",
            "**/PolyType.Roslyn.csproj"
          ]
        }
      ],
      "output": "api"
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ]
      }
    ],
    "output": "../artifacts/_site",
    "template": [
      "default",
      "modern"
    ],
    "globalMetadata": {
      "_appName": "PolyType",
      "_appTitle": "PolyType",
      "_appLogoPath": "images/polytype-logo.svg",
      "_appFaviconPath": "images/favicon.svg",
      "_enableSearch": true,
      "pdf": false
    }
  }
}