{
  "metadata": [
    {
      "src": [
        {
          "src": "../src",
          "files": [
            "**/TypeShape.csproj",
            "**/TypeShape.Roslyn.csproj",
            "**/TypeShape.Examples.csproj"
          ]
        }
      ],
      "dest": "api"
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ]
      }
    ],
    "output": "../artifacts/_site",
    "template": [
      "default",
      "modern"
    ],
    "globalMetadata": {
      "_appName": "typeshape-csharp",
      "_appTitle": "typeshape-csharp",
      "_enableSearch": true,
      "pdf": false
    }
  }
}